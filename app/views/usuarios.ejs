<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>

    <link rel="stylesheet" href="/css/bootstrap.min.css">

</head>
<body>
    <div class="row col-md-8">
        <table class="table table-striped">
            <thead>
                <tr>
                <th scope="col">N°</th>
                <th scope="col">Nome</th>
                <th scope="col">Usuário</th>
                <th scope="col">E-mail</th>
                <th scope="col">Ativo</th>
                </tr>
            </thead>
            <tbody>
                <%for(key in usuarios){%>
                <tr>
                    <th scope="row"><%= usuarios[key].id %></th>
                    <td><%= usuarios[key].nome %></td>
                    <td><%= usuarios[key].login %></td>
                    <td><%= usuarios[key].email %></td>
                    <td><%= usuarios[key].ativo %></td>
                </tr>
                <%}%>
            </tbody>
        </table>
    </div>
    <div class="row">
        <nav class="col-md-8" aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <%if(parseInt(paginaAtual) > 1) {%>
                    <li class="page-item">
                        <a class="page-link" href="/<%= (parseInt(paginaAtual)-1) %>" tabindex="-1">Anterior</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="/<%= (parseInt(paginaAtual)-1) %>">  <%= (parseInt(paginaAtual)- 1) %> </a></li>
                <%}%>
                <li class="active page-item"><a class="page-link" href="/<%= parseInt(paginaAtual) %>"> <%= parseInt(paginaAtual) %> </a></li>
                <%if(parseInt(paginaAtual) < parseInt(paginas)) {%>
                    <li class="page-item"><a class="page-link" href="/<%= (parseInt(paginaAtual)+1) %>">  <%= (parseInt(paginaAtual)+ 1) %> </a></li>
                    <li class="page-item">
                        <a class="page-link" href="/<%= (parseInt(paginaAtual)+1) %>">Próximo</a>
                    </li>
                <%}%>                
            </ul>
        </nav>
    </div>
</body>

<script src="/js/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function(){
        var paginaAtual = "<%= paginaAtual %>";
        var totalPaginas = "<%= paginas %>";
        var proxima = (parseInt(paginaAtual)+1);
        if(paginaAtual > 1){
            $('#lista').append('<li class="page-item"><a class="page-link" href="/'+ (paginaAtual-1) +'"> '+ (paginaAtual-1) +' </a></li>');
        };
        $('#lista').append('<li class="active page-item"><a class="page-link" href="/'+ paginaAtual +'"> '+ paginaAtual +' </a></li>');
        if(paginaAtual < totalPaginas){
            $('#lista').append('<li class="page-item"><a class="page-link" href="/'+ proxima +'"> '+ proxima +' </a></li>');
        };
    });
</script>
</html>